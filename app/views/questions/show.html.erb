<div class= "center hero-unit">
<h1> Details of your Question:</h1>
</br>
<h2> Question text: <%= @question.question_text %></h2>
<h2> Category: <%= @question.category.category_name %> </h2>
</br>
<p>
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th></th>
    <th colspan="1"> Answers </th>
    <th colspan="1"> Correct? </th>
    <th colspan="1"> Actions </th>
  </tr>
</thead>
  
  <% @question.answers.each do |answer| %>
  <tbody>
    <tr>
      <td></td>
      <td><%=  answer.answer_text %></td>
      <td>
         <% if answer.correct? == 1 %>
          Yes
         <% else %>
          No
         <% end %>
     </td>
      <td>
        <%= link_to(answer, method: :delete, class: "btn btn-small btn-danger") do %> 
          Delete
            <i class="icon-trash icon-white"></i>
        <% end %>
        <%= link_to(edit_answer_path(answer), class: "btn btn-small btn-warning") do %>
          Edit
            <i class="icon-edit icon-white"></i>
        <% end %>
      </td>
    </tr> 
  </tbody>
  <% end %>
</table>  
</br>
      
  <div class="float" >
    <%= back_to_questions_list %>
  </div>

</br>
</div>