<div class= "center hero-unit">
<h1>Login</h1>
</br>

  <%= form_tag login_path do %>
    <fieldset>
      <div class="control-group">
        <%= label_tag :username %>
          <div class="controls">
          <%= text_field_tag :username %>
          </div>
      </div>
      <div class="control-group">
        <%= label_tag :email %>
          <div class="controls">
          <%= text_field_tag :email %>
          </div>
      </div>
      <div class="control-group">
        <%= label_tag :password %>
          <div class="controls">
          <%= password_field_tag :password %>
          </div>
      </div>
       
      </br>
      <div>
        <%= submit_tag "Login", class: "btn btn-large btn-primary" %>
      </div>
    </fieldset>
  <% end %>
</div>