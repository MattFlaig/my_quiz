<div class= "center hero-unit">
<h1>Quiz Details</h1>
</br>
<h2>Quiz Data:</h2>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th colspan="1"> Name </th>
      <th colspan="1"> Category </th>
      <th colspan="1"> Description </th>
      <th colspan="1"> Created by </th>
      <% if @quiz.user == current_user %>
        <th colspan="1"> Actions </th>
      <% end %>
    </tr>
  </thead>
   <tbody>
    <tr>
      <td><%= @quiz.quiz_name %></td>
      <td><%= @quiz.category.category_name %></td>
      <td><%= @quiz.description %></td>
      <td><%= link_to @quiz.user.username, user_path(@quiz.user.id) %></td>
      
      <% if @quiz.user == current_user %>
        <td>
          <%= link_to "edit", edit_quiz_path(@quiz) %>
        </td>
      <% end %>
    </tr> 
  </tbody>
</table>  
</br>
<h2>Questions:</h2>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th colspan="1"> Question Number </th>
      <th colspan="1"> Question Text </th>
      <th colspan="1"> Answers </th>
      <% if @quiz.user == current_user %>
        <th colspan="1"> Actions </th>
      <% end %>
    </tr>
  </thead>
<% @quiz.questions.each_with_index do |question, index| %>
  <tbody>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= question.question_text %></td>
      <td>
      <% question.answers.each do |answer| %>
        <ul>
          <li><%=  answer.answer_text %></li>
        </ul>
      <% end %>
      </td>
      <% if @quiz.user == current_user %>
        <td>
          <%= link_to "details", question_path(question.id)%></br></br>  
          <%= link_to "edit", edit_question_path(question) %>
        </td>
      <% end %>
    </tr> 
  </tbody>
<% end %>
</table> 
</br>
  <div>  
    <div class="float" >
      <%= back_to_quizzes_list %>
    </div>     
  </div>
</br>
</div>