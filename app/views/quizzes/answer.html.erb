<div class= "center hero-unit">
<h1><%= @quiz.quiz_name %></h1>
<h2><%= @quiz.description %></h2>
</br>

  <div>
    Go to Question:</br>
    <div class="btn-group">
      <% @quiz.questions.each_with_index do |question,index| %>
        
          <%= link_to index+1, {:controller => "quizzes", :action => "question", current_question: question, :number => index }, class: "btn btn-default"%> 
        
      <% end %>
    </div>
  </div> 
  </br>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th colspan="1"> Question Number </th>
        <th colspan="1"> Quiz Question </th>
        <th colspan="1"> Your Answer </th>
      </tr>
    </thead>
    <tbody>
      <% @quiz.questions.each_with_index do |question,index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= question.question_text %></td>
        <td><%= session[:already_answered][index] %></td>
      
      </tr> 
      <% end %>
    </tbody>
  </table> 

 <!--  <div class="well">
    You have arrived at the end of this quiz! You can either review your questions some more or push the score-button below.
  </div>
  </br>

  <div > -->
    <%= link_to "Score", score_path(@quiz), class: "btn btn-large btn-warning" %>
  </div>
  </br>
</div>