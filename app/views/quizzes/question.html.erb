  <%= form_tag({:controller => "quizzes",:action => "answer"}) do %>

  
  <h3>Question <%= @number + 1 %> / <%= @length_of_quiz %>:</h3>
  <p>
  <%= @current_question.question_text %>
  </p>
  </br>

  <h3>Answers: 
    <p>
      
      <% @answers.each do |answer| %>
        <%= radio_button_tag(:answer, answer.id) %>
        <%= label_tag("answer", answer.answer_text) %>
      <% end %>
      <!-- There are no answers specified for this question. You can do so <%#= link_to "here", {:controller => "answers", :action => "new", :question => @question} %> -->
    </p>
  </h3>
    <div>
      <%= hidden_field_tag(:id, @quiz.id) %>
    </div>
    <div>
      <%= submit_tag "Submit answer & continue", class: "btn btn-large btn-success" %>
    </div>
  <% end %>
      <%= link_to "Show Score",{:controller => "quizzes", :action => "score", :id => @quiz.id}, class: "btn btn-large btn-primary" %>
</div>
